<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".UserProfile"
    android:orientation="vertical">

  <ImageView
      android:id="@+id/imageViewProfile"
      android:layout_width="100sp"
      android:layout_height="100sp"
      android:paddingTop="@dimen/nav_header_vertical_spacing"
      android:clickable="true"
      app:srcCompat="@drawable/ic_default_user" />

  <TextView
      android:layout_marginTop="15dp"
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@color/editTextBG"
      />
  <TextView
      android:layout_marginTop="15dp"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:text="First Name"
      android:color="@color/editTextBG"
      />
  <TextView
      android:layout_marginTop="15dp"
      android:id="@+id/user_profile_name"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:clickable="true"
      android:hint="Enter First Name Here"
      android:textColor="@color/black"

      />
  <TextView
      android:layout_marginTop="30dp"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:text="Last Name"
      android:color="@color/editTextBG"
      />

  <TextView
      android:layout_marginTop="15dp"
      android:id="@+id/user_profile_last_name"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:clickable="true"
      android:hint="Enter Last Name Here"
      android:textColor="@color/black"
      />
  <TextView
      android:layout_marginTop="30dp"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:text="Phone Number"
      android:color="@color/editTextBG"
      />
  <TextView
      android:layout_marginTop="15dp"
      android:id="@+id/user_profile_phone"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:clickable="true"
      android:hint="Enter Phone Number Here"
      android:textColor="@color/black"
      />
  <TextView
      android:layout_marginTop="30dp"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:text="Email Address"
      android:color="@color/editTextBG"
      />
  <TextView
      android:layout_marginTop="15dp"
      android:id="@+id/user_profile_email"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:clickable="true"
      android:hint="Enter Email Address Here"
      android:textColor="@color/black"

      />


  <Button
      android:id="@+id/button_finish"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:background="@color/colorAccent"
      android:fontFamily="sans-serif-medium"
      android:text="FINISH"
      android:textColor="@color/white" />
</LinearLayout>